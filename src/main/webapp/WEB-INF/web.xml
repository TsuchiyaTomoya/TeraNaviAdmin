    <!-- Servlet&JSP -->
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>ttc.DownloadServlet</servlet-class>
    </servlet>
    <servlet>
